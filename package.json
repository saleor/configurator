{
  "name": "saleor-configurator",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "bin": {
    "configurator": "dist/cli/main.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "saleor": {
    "schemaVersion": "3.20"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/main.ts",
    "push": "tsx src/cli/main.ts push",
    "introspect": "tsx src/cli/main.ts introspect",
    "diff": "tsx src/cli/main.ts diff",
    "start": "tsx src/cli/main.ts start",
    "fetch-schema": "tsx src/lib/graphql/fetch-schema.ts",
    "generate-docs": "tsx scripts/generate-schema-docs.ts",
    "postinstall": "pnpm run fetch-schema",
    "test": "vitest",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset tag && git push --follow-tags",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@inquirer/prompts": "^7.6.0",
    "@urql/core": "^5.0.6",
    "@urql/exchange-auth": "^2.2.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.4.5",
    "gql.tada": "^1.8.5",
    "tiny-invariant": "^1.3.3",
    "tslog": "^4.9.3",
    "yaml": "^2.7.0",
    "zod": "^3.25.71"
  }
}
