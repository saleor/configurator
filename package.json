{
  "name": "saleor-configurator",
  "version": "0.2.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "saleor": {
    "schemaVersion": "3.20"
  },
  "scripts": {
    "push": "tsx src/commands/push.ts",
    "pull": "tsx src/commands/pull.ts",
    "fetch-schema": "tsx src/lib/graphql/fetch-schema.ts",
    "generate-docs": "tsx scripts/generate-schema-docs.ts",
    "postinstall": "pnpm run fetch-schema",
    "test": "vitest",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@types/node": "^20.0.0",
    "prettier": "3.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@urql/core": "^5.0.6",
    "@urql/exchange-auth": "^2.2.0",
    "dotenv": "^16.4.5",
    "gql.tada": "^1.8.5",
    "tiny-invariant": "^1.3.3",
    "tslog": "^4.9.3",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  }
}
