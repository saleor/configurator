# Saleor Configuration Environment Variables
# Copy this file to .env and fill in your values

# Required: Saleor GraphQL endpoint URL
SALEOR_URL=https://your-saleor-instance.com/graphql/

# Required: Saleor authentication token (staff user token with proper permissions)
SALEOR_TOKEN=your-saleor-token-here

# Optional: Path to configuration file (defaults to config.yml)
SALEOR_CONFIG=config.yml

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info
